// Place your settings in this file to overwrite the default settings
{
	//-------- Editor configuration --------

	"editor.fontFamily": "Consolas, Microsoft Yahei",
	"editor.fontSize": 14,
	"editor.lineHeight": 0,
	"editor.tabSize": 2,
	"editor.wordWrap": "off",
	"editor.rulers": [
		120
	],
	"editor.renderWhitespace": "none",
	"editor.renderIndentGuides": false,
	"editor.find.autoFindInSelection": true,
	"editor.cursorStyle": "line-thin",
	"editor.multiCursorModifier": "ctrlCmd",
	"editor.snippetSuggestions": "bottom",
	"editor.formatOnType": false,
	"editor.formatOnPaste": true,
	"editor.formatOnSave": false,
	"editor.stablePeek": true,
	"editor.tabCompletion": true,
	"editor.minimap.enabled": false,

	"diffEditor.ignoreTrimWhitespace": false,

	//-------- Window configuration --------

	"window.newWindowDimensions": "inherit",
	"window.openFoldersInNewWindow": "on",
	"window.restoreWindows": "all",
	"window.title": "${dirty}${activeEditorShort} [${rootName}] ${separator}${activeEditorLong}${separator}${appName}",

	"workbench.colorTheme": "Monokai",
	"workbench.statusBar.feedback.visible": false,
	"workbench.startupEditor": "newUntitledFile",

	//-------- Files configuration --------

	"files.encoding": "utf8",
	"files.trimTrailingWhitespace": true,
	"files.autoSave": "off",
	"files.autoGuessEncoding": true,
	"files.exclude": {
		"**/.git": true,
		"**/.svn": true,
		"**/.hg": true,
		"**/CVS": true,
		"**/.idea": true,
		"**/.DS_Store": true
	},

	//-------- Git configuration --------

	// "git.path": "C:/Program Files/Git/cmd/git.exe",

	//-------- CSS configuration --------

	// @font-face rule must define 'src' and 'font-family' properties
	"css.lint.fontFaceProperties": "warning",
	// 不要使用重复的样式定义
	"css.lint.duplicateProperties": "warning",
	// 零不需要单位
	"css.lint.zeroUnits": "warning",
	// 未知的供应商特定属性。
	"css.lint.unknownVendorSpecificProperties": "warning",
	// Hex colors must consist of three or six hex numbers
	"css.lint.hexColorLength": "error",
	// Invalid number of parameters
	"css.lint.argumentsInColorFunction": "error",

	//-------- Emmet Settings --------

	"emmet.triggerExpansionOnTab": true,
	"emmet.showSuggestionsAsSnippets": true,

	//-------- 遥测 --------

	// 启用要发送给 Microsoft 的故障报表。
	"telemetry.enableCrashReporter": false,
	// 启用要发送给 Microsoft 的使用情况数据和错误。
	"telemetry.enableTelemetry": false,

	//-------- Sync Settings configuration --------

	"sync.gist": "952eb2b1a1c6ae677af867e1c916db1b",
	"sync.lastUpload": "2018-03-01T07:37:00.023Z",
	"sync.autoDownload": false,
	"sync.autoUpload": true,
	"sync.lastDownload": "",
	"sync.forceDownload": false,
	"sync.anonymousGist": false,
	"sync.host": "",
	"sync.pathPrefix": "",
	"sync.quietSync": false,
	"sync.askGistName": false,

	//-------- Other configuration --------

	"terminal.integrated.shell.windows": "C:\\WINDOWS\\System32\\WindowsPowerShell\\v1.0\\powershell.exe",

	//-------- Plugins configuration --------

	"vetur.validation.template": true,
	"vetur.format.scriptInitialIndent": true,
	"vetur.format.styleInitialIndent": true,
	"vetur.format.defaultFormatter.html": "js-beautify-html",

	"prettier.eslintIntegration": true,
	"prettier.singleQuote": true,
	"prettier.printWidth": 120,
	"prettier.disableLanguages": [],
	"prettier.semi": true,
	"prettier.trailingComma": "all",
	"prettier.arrowParens": "always",
	"prettier.stylelintIntegration": true,
	"prettier.useTabs": false,

	"eslint.alwaysShowStatus": true,
	"eslint.autoFixOnSave": true,
	"eslint.validate": [
		"javascript",
		"javascriptreact",
		{
			"language": "vue",
			"autoFix": true
		},
		"html",
		"vue",
	],

	"tslint.autoFixOnSave": true,
}